<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCarActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Novo Carro"
                app:menu="@menu/top_app_bar_addcar"
                style="@style/Widget.MaterialComponents.Toolbar.Surface"
                />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/imgViewCar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/itCarName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/carName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewCar"
        app:startIconDrawable="@drawable/icon_car">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/carName"
            android:paddingStart="50dp"
            android:maxLength="14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/itCarLicense"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="LicenÃ§a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itCarName"
        app:startIconDrawable="@drawable/icon_car">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/carLicense"
            android:paddingStart="50dp"
            android:maxLength="14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/itCarYear"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="Ano do Carro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itCarLicense"
        app:startIconDrawable="@drawable/icon_car">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/carYear"
            android:paddingStart="50dp"
            android:maxLength="14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/itCarYear"
        app:layout_constraintStart_toStartOf="@+id/itCarYear"
        android:layout_marginTop="16dp"
        android:id="@+id/btTakePhoto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TIRAR        FOTO"
        style="Widget.MaterialComponents.Button.UnelevatedButton"
        />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/itCarYear"
        app:layout_constraintStart_toEndOf="@+id/btTakePhoto"
        android:layout_marginTop="16dp"
        android:id="@+id/btPickPhoto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="ESCOLHER FOTO"
        android:layout_marginStart="5dp"
        style="Widget.MaterialComponents.Button.UnelevatedButton"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/btTakePhoto"
        app:layout_constraintTop_toBottomOf="@+id/btTakePhoto" />


</androidx.constraintlayout.widget.ConstraintLayout>